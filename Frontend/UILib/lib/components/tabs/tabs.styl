$block = ".klara-ui-tabs";
$animation-duration = 150ms;
$tabWidth = 177px;
$tabHeight = 40px;

{$block} {
  position: relative;
  display: flex;
  flex: 1;
  align-items: center;
  overflow: hidden;
  margin: 0;
  padding: 16px 0 0;
  background: $c-gray-lightest;
  cursor: default;
  user-select: none;

  &::after {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    height: 1px;
    background: $c-gray-dark;
    content: "";
  }

  &__inner {
    display: flex;
    align-items: center;
    overflow-x: auto;
    overflow-y: hidden;
    padding: 0 4px;

    &::-webkit-scrollbar {
      display: none;
    }
  }

  &__transition-group {
    display: flex;
  }

  &__overflow-indicator--left, &__overflow-indicator--right {
    position: absolute;
    top: 0;
    bottom: 1px;
    z-index: 200;
    display: flex;
    align-items: center;
    width: 0;
    transition: all $animation-duration;

    &.visible {
      width: 60px;

      & > svg {
        opacity: 1;
      }
    }

    & > svg {
      opacity: 0;
      transition: fill $animation-duration;
      fill: $c-gray-base;
    }

    &:hover {
      & > svg {
        fill: $c-gray-dark;
      }
    }
  }

  &__overflow-indicator--left {
    left: 0;
    background: linear-gradient(to right, $c-gray-lightest 50%, transparent);
  }

  &__overflow-indicator--right {
    right: 0;
    justify-content: flex-end;
    background: linear-gradient(to left, $c-gray-lightest 50%, transparent);
  }

  &__tab {
    position: relative;
    display: flex;
    flex: 0 0 auto;
    align-items: center;
    margin: 0 -24px 0 0;
    padding: 0 20px 0 24px;
    width: $tabWidth;
    height: $tabHeight;
    color: $c-gray-dark;

    &-enter {
      top: $tabHeight;
      transition: all $animation-duration;

      &-active {
        top: 0;
      }
    }

    &-exit {
      top: 0;
      transition: all $animation-duration;

      &-active {
        top: $tabHeight;
      }
    }

    &--active {
      z-index: 100;

      {$block}__tab__title {
        &::before {
          opacity: 0;
        }

        &::after {
          opacity: 1;
        }
      }

      {$block}__tab__background {
        fill: $c-white-base;
        stroke: $c-gray-dark;
      }
    }

    &__title {
      position: relative;
      flex: 1;
      overflow: hidden;
      white-space: nowrap;

      &::before, &::after {
        position: absolute;
        top: 0;
        right: 0;
        width: 30px;
        height: 100%;
        content: "";
      }

      &::before {
        background: linear-gradient(to left, $c-gray-light 20%, transparent);
        opacity: 1;
      }

      &::after {
        background: linear-gradient(to left, $c-white-base 20%, transparent);
        opacity: 0;
      }
    }

    &__close {
      z-index: 1;
      display: flex;
      justify-content: center;

      svg {
        fill: $c-gray-dark;
      }
    }

    &__background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      fill: $c-gray-light;
      stroke: $c-gray-dark;

      & svg {
        width: 100%;
        height: 100%;
      }
    }
  }

  &__add-tab {
    position: relative;
    display: flex;
    flex: 0 0 auto;
    align-items: center;
    margin: 0 8px 0 18px;
    width: 60px;
    height: 30px;

    &:hover {
      {$block}__add-tab__background {
        fill: $c-white-base;
      }
    }

    &__icon {
      z-index: 2;
      margin-left: 9px;
      fill: $c-gray-darker;
    }

    &__background {
      position: absolute;
      top: 0;
      left: 0;
      width: 36px;
      height: 30px;
      fill: $c-gray-light;
      stroke: $c-gray-dark;

      & svg {
        width: 100%;
        height: 100%;
      }
    }
  }
}
