$block = ".component-demo"

{$block} {
  max-width: 1000px;
  max-width: 90%;
  margin: 0 0 20px 0;
  padding: 15px 0;

  &__container {
    display: flex;
    flex-direction: column;
  }

  &--vertical {
    {$block}__container {
      flex-flow: row wrap;
    }

    {$block}__code {
      margin-left: 10px;
    }

    {$block}__sandbox, {$block}__code {
      flex: 1 0 300px;
      margin-bottom: 15px;
    }
  }

  {$block}__title {
    color: $c-gray-darker;
    font-weight: normal;
    margin: 0 0 25px 0;
  }

  {$block}__sandbox {
    margin: 0 0 25px 0;
    padding: 15px;
    border: 1px solid $c-gray-light;
    position: relative;

    &::before {
      content: "Demo:"
    }
  }

  {$block}__code {
    position: relative;
    padding: 5px;
    background: $c-gray-lightest;
    border: 1px solid $c-gray-light;
    word-wrap: break-word;
    white-space: pre-wrap;

    &::before {
      content: "Code:"
    }
  }

  {$block}__sandbox::before,
  {$block}__code::before {
      position: absolute;
      top: -16px;
      left: 0;
      font-size: 11px;
      text-transform: uppercase;
      color: $c-gray-base;
    }

  &__error {
    background: $c-danger-lightest;
    border: 1px solid $c-danger-base;
    color: $c-danger-base;
    font-weight: bold;
    padding: 1em;

    p {
      margin: 0 0 0.5em 0;
    }
  }
}
