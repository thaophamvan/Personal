@import "./../../style/styles.styl";
@import "./menu/MenuGroup.styl";
@import "./pages/ColorsPage.styl";
@import "./pages/NotificationComponentPage.styl";
@import "./pages/TextFieldComponentsPage.styl";
@import "./component-demo.styl";
@import "./componentPlayground.styl";
@import "./IconComponentPage.styl";

$block = ".style-guide";
$row-border-color = $c-gray-light;

html {
  height: 100%;
}

body {
  min-height: 100%;
  height: 100%;
}

{$block} {
  display: flex;
  box-sizing: border-box;
  height: 100vh;

  scrollbar();

  width: auto;

  *, *:before, *:after {
    box-sizing: inherit;
  }

  &__navigation {
    display: flex;
    flex-direction: column;
    margin-right: 20px;
    min-height: 100%;
    width: 280px;
    border-right: solid 1px $c-gray-light;
  }

  &__logo {
    margin: 40px auto 0;
  }

  &__logo-text {
    margin: 0 0 40px;
    color: $c-gray-base;
    text-align: center;
    text-decoration: none;
    font-size: 26px;
  }

  &__menu {
    overflow: auto;
    height: 100%;
    border-top: solid 1px $c-gray-light;
    background-color: $c-gray-lightest;
  }

  &__wrapper {
    flex: 1;
    overflow: auto;
    margin: 0 auto;
    padding: 20px 50px;
    height: 100%;
  }

  &__row {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    margin: 15px 0;
    padding-bottom: 15px;
    padding-left: 12px;
    max-width: 1400px;

    &--inverted {
      margin: 0;
      padding-top: 15px;
      background: #666666;
    }
  }

  &__column {
    flex: 1 0 400px;
    max-width: 100%;
  }

  &__table {
    max-width: 800px;
    width: 100%;
    border: 1px solid $c-gray-light;
    border-collapse: collapse;

    th, td {
      padding: 5px;
      border: 1px solid $c-gray-light;
    }

    tr:nth-child(odd) > td {
      background-color: $c-gray-lightest;
    }

    th {
      text-align: left;
    }

    td {
      font-size: 14px;
    }

    tr:nth-child(odd) > td {
      background-color: $c-gray-lightest;
    }
  }

  &__list {
    padding-left: 0;
  }

  .message__warning {
    box-sizing: initial;
    padding: 15px;
    max-width: 500px;
    border: 1px solid $c-warning-light;
    background: $c-warning-lightest;
  }

  code {
    display: inline;
    padding: 3px;
    background: $c-gray-lightest;
    color: $c-gray-darker;
    font-size: .9em;

    &.block {
      display: block;
    }

    &.inverted {
      color: white;
    }
  }
}
