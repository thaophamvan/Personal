.product-list.js_product-list-container
  .js_product-list-wrapper
    ul.row.js_product-list
      li.product-list__product.col-md-4.col-6
        .product-list__product-wrapper
          .product-list__product-body
            .product-list__product-media
              .product-list__sale-off-label 20% OFF
              a.product-list__product-img-link.btn-link(href="#")
                +ImgLazy("product-list__product-img",'/dist/images/block-img-bg.svg', 'ProductImageAltText')
