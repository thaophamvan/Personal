{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "func-names": ["error", "never"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false, "argsIgnorePattern": "next" }],
    "no-underscore-dangle": ["error", { "allow": ["_id", "__v"] }],
    "no-bitwise": ["error", { "int32Hint": true,  "allow": [">>"]  }],
    "max-len": [2, 120, 4],
    "unicode-bom": ["error", "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/label-has-for": "off",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": "off",
    "global-require": "off"
  },
   "plugins": [
    "babel"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
